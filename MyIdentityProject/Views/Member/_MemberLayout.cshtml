@RenderSection("scripts", required: false)
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
    <script src="~/lib/jquery/dist/jquery.js"></script>

    <link href="~/lib/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet" />

</head>
  <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="#">Navbar</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">

                <li class="nav-item active">
                    <a class="nav-link" asp-action="index" asp-controller="Member">Profilim<span class="sr-only">(current)</span></a>
                </li>
                <li class="nav-item active">
                    <a class="nav-link" asp-action="PhotoUpload" asp-controller="Member">Fotoğraf Yükle<span class="sr-only">(current)</span></a>
                </li>

            </ul>
        </div>
    </nav>
    <div class="container" style="margin-top:10px;margin-left:2px">
        <div class="row">
            <div class="col-3 shadow p-3 mb-5 bg-body rounded">
                <h3 class="p-3 mb-2 bg-dark text-white rounded font-weight-bold">Kullanıcı Menüsü</h3>
                <div class="list-group">
                   
                   
                    <a  class="btn btn-info btn-block" asp-action="PasswordChange" asp-controller="Member">Paraloyı Değiştir</a>
                    <a class="btn btn-info btn-block" asp-action="UserEdit" asp-controller="Member">Bilgilerimi Düzenle</a>
                  
                    <a  class="btn btn-info btn-block" asp-action="LogOut" asp-controller="Member" asp-route-returnUrl="/Home/Index">Çıkış Yap</a>
                </div>





            </div>
            <div class="col-9">
                @RenderBody()
            </div>

        </div>
    </div>
</body>
</html>
